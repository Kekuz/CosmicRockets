<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_text_style">
        <item name="android:fontFamily">@font/lab_grotesque_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="rv_num_text_style">
        <item name="android:fontFamily">@font/lab_grotesque_bold</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="rv_info_text_style">
        <item name="android:fontFamily">@font/lab_grotesque_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="normal_text_style">
        <item name="android:fontFamily">@font/lab_grotesque_regular</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="normal_info_text_style">
        <item name="android:fontFamily">@font/lab_grotesque_regular</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="normal_title_text_style">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/lab_grotesque_bold</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="units_text_style">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/lab_grotesque_bold</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="button_text_style">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/lab_grotesque_bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:maxLines">1</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="error_text_style">
        <item name="android:fontFamily">@font/lab_grotesque_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rv_launch_name_text_style">
        <item name="android:fontFamily">@font/lab_grotesque_regular</item>
        <item name="android:textSize">@dimen/rv_launch_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="rv_launch_date_text_style">
        <item name="android:fontFamily">@font/lab_grotesque_regular</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="switch_style">
        <item name="switchTextAppearance">@style/switch_text_style</item>
        <item name="showText">true</item>
        <item name="track">@drawable/settings_switch_track</item>
        <item name="android:thumb">@drawable/settings_switch_thumb</item>

    </style>

    <style name="switch_text_style">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>